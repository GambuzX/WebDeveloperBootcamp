<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %> </div>
    
    <form class="ui form" action="/blogs/<%=blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" value="<%= blog.title %>" name="blog[title]">
        </div>
         <div class="field">
            <label>Image</label>
            <input type="text" value="<%= blog.image %>" name="blog[image]">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required> <%= blog.body %> </textarea>
        </div><div class="field">
            <input class="ui purple basic button big" type="submit" value="Submit">
        </div>
    </form>
</div>

<% include partials/footer %>